#include <stdio.h>

#define MAX 100

int adj[MAX][MAX], visited[MAX], dist[MAX];
int queue[MAX], front = 0, rear = -1;

void enqueue(int v) {
    queue[++rear] = v;
}

int dequeue() {
    return queue[front++];
}

int isEmpty() {
    return front > rear;
}

int main() {
    int n, m, i, u, v, src, dest;

    printf("Enter number of vertices: ");
    scanf("%d", &n);

    printf("Enter number of edges: ");
    scanf("%d", &m);

    for (i = 0; i < n; i++) {
        for (int j = 0; j < n; j++)
            adj[i][j] = 0;
        visited[i] = 0;
        dist[i] = -1;
    }

    printf("Enter edges (u v):\n");
    for (i = 0; i < m; i++) {
        scanf("%d %d", &u, &v);
        adj[u][v] = 1;
        adj[v][u] = 1;
    }

    printf("Enter source and destination: ");
    scanf("%d %d", &src, &dest);

    enqueue(src);
    visited[src] = 1;
    dist[src] = 0;

    while (!isEmpty()) {
        int curr = dequeue();

        for (i = 0; i < n; i++) {
            if (adj[curr][i] && !visited[i]) {
                visited[i] = 1;
                dist[i] = dist[curr] + 1;
                enqueue(i);
            }
        }
    }

    printf("Minimum number of edges between %d and %d = %d\n",
           src, dest, dist[dest]);

    return 0;
}
